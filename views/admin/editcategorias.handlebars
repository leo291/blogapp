{{#each erros}}
	<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}


{{#each categoria}} 
  <div class="card bg-dark text-white">
  
    <div class="card-body">
    	<h3>Editar categoria</h3>
    </div>
  </div>


<div class="card bg-info text-white">
	<div class="card-body">
<form action="/admin/categorias/edit"	method="POST">
	<input type="hidden"  name="id"  value="{{_id}}">

	<label>Nome: </label>
		<input type="text" id="nome" name="nome" placeholder="Nome da Categoria" class='form-control'  value="{{nome}}">
	<label for="slug">Slug:</label>
		<input type="text" id="text" name="slug" placeholder="Slug da categoria" class='form-control' value="{{slug}}"><br>
	<button type="submit" class='btn btn-success'>Confirmar</button>



</form>

</div>
</div>{{/each}}


