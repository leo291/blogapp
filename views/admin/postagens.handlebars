<h2>Lista de Post</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-info">Novo Post </button></a>

{{#each postagens}}
	<div class="card bg-dark text-white mt-1">
			<div class="card-body card-success">
			<h4>{{titulo}}</h4>	
			 <p>Descrição: {{descricao}}</p>
			Categoria: <small>{{categoria.nome}}</small></br>
			<small>{{date}}</small><br>
		<a href="/admin/postagens/edit/{{_id}}">	<button class="btn btn-success" >Editar</button></a>

<a href="/admin/postagens/delete/{{_id}}">	<button class="btn btn-danger" >Deletar</button></a>
		</div>
	</div>
	
{{else}}
	<P>Nenhuma postagem registrada</P>
{{/each}}
