{{#each erros}}
	<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

{{#each postagens }}
<div class="card bg-dark text-white mt-1">
	<dir class="card-body">
		<h4>Nova Postagem</h4>
		<form action="/admin/postagens/edit" method="POST">
			<input type="hidden" name="id"  value="{{_id}}">
			<label for="titulo">Titulo: </label>
			<input type="text" name="titulo" class="form-control" value="{{titulo}}">
			
			<label for="slug">Slug: </label>
			<input type="text" name="slug" class="form-control" value="{{slug}}">
			
			<label for="descricao">Descrição: </label>
			<input type="text" name="descricao" class="form-control" value="{{descricao}}">
			
			<label for="categorias">Categorias: </label>
			<select class="custom-select" name="categoria" >
				<option value="{{categoria._id}}">{{categoria.nome}}</option>	{{/each}}
				{{#each categorias}}

				<option value="{{_id}}">{{nome}}</option>
				{{else}}
				<option value="0">erro</option>

				{{/each}}{{#each postagens }}

			</select >
			
			<label for="conteudo">Conteúdo: </label>
			<textarea name="conteudo" class="form-control">{{conteudo}}</textarea>
			<button class="btn btn-success mt-4" type="submit">Confirmar</button>
		</form>

	</div>


</div>
	{{/each}}